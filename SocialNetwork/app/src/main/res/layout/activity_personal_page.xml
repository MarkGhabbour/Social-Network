<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.socialnetwork.personal_page">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Home Page"
            android:textSize="24sp"
            android:gravity="center_horizontal"
            android:background="#18ffff"
            android:onClick="view_friends_posts"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post on your timeline"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:layout_margin="16sp"
            android:background="#18ffff"
            android:onClick="WritePost"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add friends"
            android:textAllCaps="false"
            android:background="#18ffff"
            android:layout_margin="16sp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My wall"
            android:textAllCaps="false"
            android:background="#18ffff"
            android:layout_margin="16sp"
            android:onClick="show_my_wall"
            />
    </LinearLayout>




</RelativeLayout>