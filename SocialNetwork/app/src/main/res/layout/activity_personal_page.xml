<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.socialnetwork.personal_page">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Home Page"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:background="@color/colorPrimary"
            android:textColor="#FFF"
            android:onClick="view_friends_posts"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post on your timeline"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:layout_margin="16sp"
            android:background="@color/colorPrimary"
            android:textColor="#FFF"
            android:onClick="WritePost"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add friends"
            android:onClick="show_non_friends"
            android:textAllCaps="false"
            android:background="@color/colorPrimary"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:layout_margin="16sp"
           />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:layout_margin="16sp"
            android:text="Search "
            android:textAllCaps="false"
            android:onClick="Search"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My posts"
            android:onClick="gotoWall"
            android:textAllCaps="false"
            android:background="@color/colorPrimary"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:layout_margin="16sp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Account Information"
            android:textAllCaps="false"
            android:background="@color/colorPrimary"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:onClick="viewInfo"
            android:layout_margin="16sp"
            />
    </LinearLayout>




</RelativeLayout>