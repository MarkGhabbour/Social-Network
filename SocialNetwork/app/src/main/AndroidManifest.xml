<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.socialnetwork">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".signup" android:label="Sign Up" />
        <activity android:name=".personal_page" android:label="Profile" />
        <activity android:name=".friends_posts" android:label="Friend's posts"></activity>
        <activity android:name=".Login" android:label="Log In"/>
        <activity android:name=".writepost" android:label="Write a post"/>
    </application>

</manifest>